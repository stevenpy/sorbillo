<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">All Recipes</h1>

  <div class="mb-8">
    <%= form_with url: recipes_path, method: :get, class: "flex items-center" do |form| %>
      <%= form.text_field :ingredient, placeholder: "Search by ingredient", class: "shadow appearance-none border rounded-l w-full py-2 px-3 text-gray-800 leading-tight focus:outline-none focus:shadow-outline" %>
      <%= form.submit "Search", class: "bg-gray-800 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded-r focus:outline-none focus:shadow-outline transition duration-300" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @recipes.each do |recipe| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl hover:scale-105 transition duration-300 ease-in-out transform">
        <%= link_to recipe, class: "block" do %>
          <div class="p-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= recipe.name %></h2>
            <div class="flex flex-wrap text-sm text-gray-600">
              <div class="mr-4 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <%= recipe.prep_time %> min prep
              </div>
              <div class="mr-4 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
                </svg>
                <%= recipe.cook_time %> min cook
              </div>
              <div>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <%= recipe.serving %> servings
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>