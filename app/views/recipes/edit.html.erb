<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">Edit Recipe</h1>
  <%= render "form", recipe: @recipe %>

  <div class="mt-8 text-center">
    <%= button_to "Delete Recipe", @recipe, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this recipe?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300" %>
  </div>
</div>