<%= form_with model: recipe, class: "max-w-md mx-auto" do |form| %>
  <%= render "shared/error_form", form: form %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :prep_time, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <div class="flex items-center">
      <%= form.number_field :prep_time, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <span class="ml-2 text-gray-600">minutes</span>
    </div>
  </div>

  <div class="mb-4">
    <%= form.label :cook_time, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <div class="flex items-center">
      <%= form.number_field :cook_time, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <span class="ml-2 text-gray-600">minutes</span>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :serving, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :serving, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "bg-gray-800 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300" %>
    <%= link_to "Cancel", recipes_path, class: "inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800" %>
  </div>
<% end %>