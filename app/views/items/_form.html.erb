<%= form_with model: recipe_ingredient, url: recipe_items_path(recipe), class: "max-w-md mx-auto" do |form| %>
  <%= render "shared/error_form", form: form %>

  <div class="mb-4">
    <%= form.label :ingredient_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.collection_select :ingredient_id, recipe.available_recipe_ingredients, :id, :name, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :quantity, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :quantity, step: 0.01, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= form.label :unit, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :unit, RecipeIngredient::UNITS, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "Add", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300" %>
    <%= link_to "Cancel", recipe_path(recipe), class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
  </div>
<% end %>